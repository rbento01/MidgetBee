@model MidgetBee.Models.Reviews

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @if (User.IsInRole("Admin")) {
                <input type="hidden" asp-for="IdReview" />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Visibilidade" /> @Html.DisplayNameFor(model => model.Visibilidade)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            } else if (User.IsInRole("Cliente")) {
                <input type="hidden" asp-for="IdReview" />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Visibilidade" /> @Html.DisplayNameFor(model => model.Visibilidade)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
            }
            <div hidden>
                <input type="hidden" asp-for="IdReview" />

                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsersFK" class="control-label"></label>
                    <select asp-for="UsersFK" class="form-control" asp-items="ViewBag.UsersFK"></select>
                    <span asp-validation-for="UsersFK" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnimeFK" class="control-label"></label>
                    <select asp-for="AnimeFK" class="form-control" asp-items="ViewBag.AnimeFK"></select>
                    <span asp-validation-for="AnimeFK" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}