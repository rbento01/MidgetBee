@model IEnumerable<MidgetBee.Models.AnimesCategoria>

@{
    ViewData["Title"] = "Index";
    string selectCateg = "Action";
    bool isTrue = true;
}



<h1>Categorias</h1>

@if (User.IsInRole("Admin")) {
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<script>
    function Action() {
        @if (isTrue) {
            selectCateg = "Action";
        }

    }

    function Comedy() {
        @if (isTrue) {
            selectCateg = "Comedy";
        }
    }

    function Love() {
        @if (isTrue) {
            selectCateg = "Love";
        }
    }

    function Historical() {
        @if (isTrue) {
            selectCateg = "Historical";
        }
    }

    function Adventure() {
        @if (isTrue) {
            selectCateg = "Adventure";
        }
    }

    function Shounen() {
        @if (isTrue) {
            selectCateg = "Shounen";
        }
    }

    function Supernatural() {
        @if (isTrue) {
            selectCateg = "Supernatural";
        }
    }

    function Terror() {
        @if (isTrue) {
            selectCateg = "Terror";
        }
    }

    function Drama() {
        @if (isTrue) {
            selectCateg = "Drama";
        }
    }

    function Ecchi() {
        @if (isTrue) {
            selectCateg = "Ecchi";
        }
    }
</script>

<span class="accordion-body" style="float: left; margin-bottom:100px; position:absolute">Selecionar por categoria</span>


<button style="margin-top:50px;" class="btn btn-primary" onclick="Action()">Action</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Comedy()">Comedy</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Love()">Love</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Historical()">Historical</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Adventure()">Adventure</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Shounen()">Shounen</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Supernatural()">Supernatural</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Terror()">Terror</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Drama()">Drama</button>
<button style="margin-top:50px;" class="btn btn-primary" onclick="Ecchi()">Ecchi</button>


<br />
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animes.Fotografia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {

            if (selectCateg == item.Categorias.nomeCategoria) {
                <tr>
                    <td>
                        <img style="width: 200px; height: 250px; border: 4px solid black; object-fit: fill;" src="~/fotos/@Html.DisplayFor(modelItem => item.Animes.Fotografia)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorias.nomeCategoria)
                    </td>
                    @if (User.IsInRole("Admin")) {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.idAnimesCategoria">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.idAnimesCategoria">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.idAnimesCategoria">Delete</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
