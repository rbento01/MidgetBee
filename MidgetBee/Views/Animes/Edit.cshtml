@model MidgetBee.Models.Animes

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@if (User.IsInRole("Admin")) {
    <h4>Animes</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAnime" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantEpisodios" class="control-label"></label>
                    <input asp-for="QuantEpisodios" class="form-control" />
                    <span asp-validation-for="QuantEpisodios" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sinopse" class="control-label"></label>
                    <input asp-for="Sinopse" class="form-control" />
                    <span asp-validation-for="Sinopse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Autor" class="control-label"></label>
                    <input asp-for="Autor" class="form-control" />
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estudio" class="control-label"></label>
                    <input asp-for="Estudio" class="form-control" />
                    <span asp-validation-for="Estudio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Links" class="control-label"></label>
                    <input asp-for="Links" class="form-control" />
                    <span asp-validation-for="Links" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fotografia" class="control-label"></label>
                    <input type="file" asp-for="Fotografia" accept=".png,.jpg,.jpeg" class="form-control" />
                    <span asp-validation-for="Fotografia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}