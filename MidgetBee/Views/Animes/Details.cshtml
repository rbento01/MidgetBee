@model MidgetBee.Models.Animes

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Nome)</h1>

<div>
    <div style="float:left; margin-right:20px;" class="form-group">
        <img src="~/fotos/@Html.DisplayFor(model => model.Fotografia)" width="200" alt="Fotografia do @Html.DisplayFor(model => model.Nome)" title="@Html.DisplayFor(model => model.Nome)" />
    </div>
    <div style="line-height:2;" class="form-group">
        @* se não adicionarmos o atributo enctype="multipart/form-data" não conseguimos enviar os ficheiros para o servidor *@
        <form style="float:right; display:inline;" enctype="multipart/form-data">
            <button style="background-color:cornflowerblue">
                Adicionar aos Favoritos
            </button>
        </form> <br /><br />
        <div style="float:right;">
            @* se não adicionarmos o atributo enctype="multipart/form-data" não conseguimos enviar os ficheiros para o servidor *@
            <form style="display: inline;" enctype="multipart/form-data">
                Episodes: <input type="text" value="1" size="1" id="inc" style="text-align:center">  /
            </form>
            <span>@Html.DisplayFor(model => model.QuantEpisodios)</span>
            <button onclick="buttonClick()" value="Increment Value">+</button>
        </div>

        <b>Nome: </b> @Html.DisplayFor(model => model.Nome)<br />
        <b>Episódios: </b> @Html.DisplayFor(model => model.QuantEpisodios)<br />
        <b>Rating: </b> @Html.DisplayFor(model => model.Rating)<br />
        <b>Autor: </b> @Html.DisplayFor(model => model.Autor)<br />
        <b>Estúdio: </b> @Html.DisplayFor(model => model.Estudio)<br />
        <b>Periodo de Lançamento: </b> @Html.DisplayFor(model => model.Data)<br />
        <a style="font-weight:bold" href="@Html.DisplayFor(model => model.Links)"><b> Site para a Visualização</b></a><br />
        <b>Categorias: </b> @Html.DisplayFor(model => model.Categoria)<br /><br />
    </div>
    <div class="form-group">
        <b>Sinopse:</b> @Html.DisplayFor(model => model.Sinopse)<br /><br />
    </div>
    <div>
        @*  se não adicionarmos o atributo
                 enctype="multipart/form-data"
        não conseguimos enviar os ficheiros para o servidor *@
        <form action="/" method="post" enctype="multipart/form-data">
            <span>Rating: </span><input type="number" id="rating" min="1" max="10" text-align:center" maxlength="2" placeholder="Número de 1 a 10"><br /><br />
            <span>Comentário: </span><br />
            <textarea id="comentario" style="resize:none; width:1100px; height:100px;"></textarea>
        </form>
    </div>
    

</div>
<div>
    <br />
    <a asp-action="Edit" asp-route-id="@Model.IdAnime">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    var i = 1;
    function buttonClick() {
        var value = parseInt(document.getElementById('inc').value, 10);
        value = isNaN(value) ? 0 : value;
        value++;
        document.getElementById('inc').value = value;
        if (value >= @Html.DisplayFor(model => model.QuantEpisodios)) {
            value = @Html.DisplayFor(model => model.QuantEpisodios);
            document.getElementById('inc').value = value;
        }
    }
</script>