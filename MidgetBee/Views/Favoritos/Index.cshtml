@model IEnumerable<MidgetBee.Models.Favoritos>

@{
    ViewData["Title"] = "Index";
}

<h1>Favoritos</h1>

<br />

@foreach (var item in Model) {
    if (item.Utilizador.Email == User.Identity.Name) {
        @*cada anime vai ter o seu próprio div*@
        <div class="Anime">
            @*Caso o user clique o razor envia para a página dos Details do Anime em questão*@
            <a asp-action="Details" asp-controller="Animes" asp-route-id="@item.Anime.IdAnime">
                @*Coloca a foto do anime*@
                <img class="fotoAnime" style="position:absolute;" src="~/fotos/@Html.DisplayFor(modelItem => item.Anime.Fotografia)" />

                @*div para ajudar a fazer o hover e tornar a página mais apresentável*@
                <div class="overlay">
                    <div class="text">
                        @*Coloca o texto no meio do div*@
                        @Html.DisplayFor(modelItem => item.Anime.Nome)
                    </div>
                </div>
            </a>
        </div>

    }
}